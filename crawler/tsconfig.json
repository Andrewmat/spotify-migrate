{
  "compilerOptions": {
    "baseUrl": "..",
    "allowJs": true,
    "jsx": "react",
    "module": "CommonJS",
    "target": "ES2018",
    "moduleResolution": "node",
    "outDir": "../crawler-build",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["./crawler"],
      "@src/*": ["./src"],
      "@Type": ["./src/d.ts/index.d.ts"],
      "@Type/*": ["./src/d.ts/*"]
    },
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "lint": {
          "validProperties": [
            "content-visibility",
            "contain-intrinsic-size"
          ]
        }
      }
    ]
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "build", "crawler-build"]
}
